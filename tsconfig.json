{
    "compilerOptions": {
        "module": "amd",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "target": "es5",
        "lib": [
            "es2016",
            "dom"
        ],
        "outDir": "lib"
    },
    "include": [
        "src/**/*",
        "typings/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
